@model WebApplication_Books.Models.BookViewModel

@{
    ViewData["Title"] = Model.Title + " - Show Info";
}

<div class="text-center">
    <h1 class="display-4">About "@Model.Title"</h1>
</div>

<div class="text-center">
    <h3>@Model.Title</h3>
    <p class="text-muted">Price of the book: @decimal.Round(Model.Price) &#8364;</p>
    @if (Model.Count > 10)
    {
        <p class="text-success">Count: @Model.Count</p>
    }
    else
    {
        <p class="text-danger">Count: @Model.Count</p>
    }
</div>

<div class="m-2">
    <hr />
    <a class="btn btn-primary shadow" href="/Books/Books">Back to "List of books"</a>
</div>
