@model WebApplication_Books.Models.BookViewModel

@{
    ViewData["Title"] = Model.Title + " - Delete book";
}

<div class="text-center">
    <h1 class="display-4">Confirm deletion</h1>
    <hr />
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Books" asp-action="DeleteBook">
            <div class="form-group">
                <input type="number" class="form-control" hidden readonly asp-for="ID" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" readonly asp-for="Title" />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" readonly asp-for="Price" />
            </div>
            <div class="form-group">
                <input type="number" class="form-control" readonly asp-for="Count" />
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-danger" value="Delete" />
                <a class="btn btn-primary shadow" href="/Books/Books">Back to "List of books"</a>
            </div>
        </form>
    </div>
</div>